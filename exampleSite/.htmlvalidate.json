{
    "root": true,
    "extends": [
        "html-validate:recommended",
        "html-validate:document"
    ],
    "elements": [
        "html5",
        {
            "th": {
                "inherit": "th",
                "requiredAttributes": [ ]
            }
        }
    ],
    "rules": {
        "svg-focusable": "off",
        "void-style": "off",
        "script-type": "off",
        "attr-quotes": "off",
        "prefer-tbody": "off",
        "no-raw-characters": [
                "error",
                {
                    "relaxed": true
                }
        ],
        "require-sri": "off",
        "no-deprecated-attr": "warn",
        "no-trailing-whitespace": "off",
        "no-inline-style": "off",
        "no-redundant-role": "error",
        "aria-label-misuse": "error",
        "element-required-attributes": "error",
        "void-content": "error",
        "wcag/h30": "warn",
        "wcag/h37": "warn",
        "no-redundant-for": "error",
        "input-missing-label": "error",
        "heading-level": "error",
        "text-content": "error",
        "long-title": "error",
        "element-permitted-content": "error"
    }
}
